<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:scaleType="fitXY"
        android:layout_margin="3dp"
        android:id="@+id/imageSearchbaihat"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <TextView
        android:id="@+id/textviewsearchtenbaihat"
        android:textSize="18sp"
        android:textColor="#0a0a0a"
        android:text="Ten bai hat"
        android:layout_toRightOf="@id/imageSearchbaihat"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_below="@id/textviewsearchtenbaihat"
        android:id="@+id/textviewsearchtencasi"
        android:textSize="18sp"
        android:textColor="#6e6d6d"
        android:text="Ten Ca Si"
        android:layout_toRightOf="@id/imageSearchbaihat"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginRight="10dp"

        android:layout_alignParentRight="true"
        android:src="@drawable/iconrating"
        android:id="@+id/imageviewSearchrating"
        android:layout_width="25dp"
        android:layout_height="25dp"/>
    <TextView
        android:textColor="#8c8a8a"
        android:textSize="18sp"
        android:text="Rating"
        android:ellipsize="none"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="12dp"
        android:layout_below="@id/imageviewSearchrating"
        android:id="@+id/textviewratingsearchbaihat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true" />
</RelativeLayout>