<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_margin="15dp"
            android:textSize="20sp"
            android:text="1"
            android:id="@+id/textviewdanhsachindex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textviewtenbaihat"
            android:textSize="20sp"
            android:text="Ten ca khuc"
            android:textColor="#030303"
            android:layout_toRightOf="@id/textviewdanhsachindex"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Ten ca si"
            android:textSize="20sp"
            android:textColor="#979797"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toRightOf="@id/textviewdanhsachindex"
            android:layout_below="@id/textviewtenbaihat"
            android:id="@+id/textviewtencasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/iconrating"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:id="@+id/imageviewratingdanhsachbaihat"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <TextView
            android:textColor="#8c8a8a"
            android:textSize="18sp"
            android:text="Rating"
            android:ellipsize="none"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="12dp"
            android:layout_below="@id/imageviewratingdanhsachbaihat"
            android:id="@+id/textviewratingdanhsachbaihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>